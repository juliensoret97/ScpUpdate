{% extends 'base.html.twig' %}

{% block title %}FormationScp
{% endblock %}

{% block body %}
	<div class="card text-white mb-3" style="max-width: 100%;background-color: #2c77bc">
		<div class="card-header">{{ formation_scp.titre }}</div>
		<div class="card-body">
			<p class="subTitleCard">Objectif :
			</p>
			<p class="card-text mt-auto">{{ formation_scp.info }}</p>
			<p class="subTitleCard">Prérequis :
			</p>
			<p class="card-text mt-auto">{{ formation_scp.prerequis }}</p>

			<p class="subTitleCard">Durée de la formation :
			</p>
			<p class="card-text mt-auto">
				{{ formation_scp.dureeFormation }}</p>

			<a href="{{ asset('pdf/plaquette/' ~ formation_scp.plaquette)}}" target="blank" class="btn btn-warning btn-sm mt-auto" id="p-formation">Voir plaquette</a>
			<a href="{{ asset('pdf/planning/' ~ formation_scp.planning)}}" target="blank" class="btn btn-success btn-sm mt-auto" id="p-formation">Voir planning</a>
		</div>
	</div>
	<a href="{{ path('formation_scp_index') }}" class="btn btn-info mt-auto">Retour</a>

{% endblock %}
